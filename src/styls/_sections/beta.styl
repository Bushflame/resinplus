.beta
    padding 6rem 0 //1rem
    .grid 
        display grid
        grid-template-columns 1fr
        gap 1rem
        width 100%
        max-width 1080px 
        margin auto
        position relative
        z-index 1
        grid-template-areas: 'one' 'two'
    .two 
        padding 1rem
    .trio-1, .trio-2, .trio-3
        grid-area 1 / 1
    .trio-1
        // max-width 60%
        justify-self left
        align-self self-start
        width 100%
        max-width 80%
        height fit-content 
    .trio-2
        justify-self center
        align-self center
        width 100%
        height fit-content
        max-width 80%
    .trio-3
        justify-self right
        align-self end
        max-width 80%
        width 100%
        height fit-content 
    .trio-grid
        display grid
        grid-template-columns 1fr
        margin auto
        // height 100%
        height 32rem
        width 400px
        max-width 100%
        padding 0 1rem
@media(min-width 900px)
    .trio-grid 
        width 100%
        max-width 500px
        height 48rem
    .beta
        .grid 
            display grid
            grid-template-columns 1fr 1fr
            grid-template-areas: 'one two'        