.footer 
    background var(--alpha-drk)
    width 100%
    padding 4rem 1rem
    .foot
        padding 1rem  
        text-align center
        color #fff 
        a 
            color #fff 
            display block
            padding 1rem    
            text-decoration none
    .icon 
        width 4rem
        height 4rem
        margin 1rem auto
    .one-a, .two-a 
        background rgba(255,255,255,.1)
        color #fff
        display flex 
        justify-content center
        flex-direction column
        font-size 1.1rem
        height 100%
        padding 1rem
        margin auto
        text-align center
        width 100%

    .grid 
        display grid 
        grid-template-columns: 1fr
        grid-template-areas: 'one' 'two' 'three'
        gap 1rem
        margin auto
        max-width 500px
        width 100%

@media(min-width 660px)
    .footer
        .grid
            grid-template-columns: 1fr 1fr
            grid-template-areas: 'one two' 'three three'
            max-width 800px
@media(min-width 900px)
    .footer
        .grid
            grid-template-columns: 1fr 1fr
            grid-template-areas: 'one three' 'two three'
            max-width 960px




