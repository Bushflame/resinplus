.banner 
    display grid 
    grid-auto-columns: 1fr
    grid-template-rows: 1fr
    justify-content center
    align-items center
    height fit content //100Vh //660px
    margin-bottom 4rem
    width 100%
    max-width 100%
    position relative
    padding 0 1rem
